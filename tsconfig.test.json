{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-test",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ]
} 